# Local environment secrets (DO NOT COMMIT)
# AI Service Configuration - Use only this .env file

# Basic Configuration
REQUEST_TIMEOUT=10
DEFAULT_LIMIT=25
MAX_LIMIT=100

# LinkedIn Credentials (for authenticated scraping and hiring manager extraction)
LINKEDIN_EMAIL=test@gmail.com
LINKEDIN_PASSWORD=test

# AI Provider Configuration
# OpenAI Configuration (GPT models)
OPENAI_API_KEY=

# Groq Configuration (Fast inference with Llama, Mixtral, Gemma models)
GROQ_API_KEY=

# Anthropic API Key (alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default AI Configuration
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-3.5-turbo
DEFAULT_LLM_PROVIDER=openai

# Browser Settings for AutoApply
HEADLESS_MODE=false
BROWSER_WAIT_TIME=10

# Debug Settings
DEBUG_MODE=false

# Optional: switch to 'api' once you implement LinkedInAPIClient
# LINKEDIN_MODE=api
